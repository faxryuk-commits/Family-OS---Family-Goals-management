// FamilyOS - Family Goal Management System
// Prisma Schema v6 (PostgreSQL)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// NEXTAUTH TABLES
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// USERS & FAMILIES
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  bio           String?   // –û —Å–µ–±–µ
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Gamification
  level          Int      @default(1)
  xp             Int      @default(0)
  streak         Int      @default(0)      // –¢–µ–∫—É—â–∏–π —Å—Ç—Ä–∏–∫ check-in
  longestStreak  Int      @default(0)      // –ú–∞–∫—Å–∏–º–∞–ª—å–Ω—ã–π —Å—Ç—Ä–∏–∫
  lastCheckIn    DateTime?                  // –ü–æ—Å–ª–µ–¥–Ω–∏–π check-in –¥–ª—è —Å—Ç—Ä–∏–∫–∞
  goalsCompleted Int      @default(0)      // –í—Å–µ–≥–æ –≤—ã–ø–æ–ª–Ω–µ–Ω–æ —Ü–µ–ª–µ–π
  subtasksCompleted Int   @default(0)      // –í—Å–µ–≥–æ –≤—ã–ø–æ–ª–Ω–µ–Ω–æ –ø–æ–¥–∑–∞–¥–∞—á

  // NextAuth Relations
  accounts Account[]
  sessions Session[]

  // App Relations
  familyMemberships FamilyMember[]
  goals             Goal[]           @relation("OwnedGoals")
  assignedGoals     Goal[]           @relation("AssignedGoals")
  checkIns          CheckIn[]
  achievements      UserAchievement[]
  comments          Comment[]
  reactions         Reaction[]
  
  // Notifications
  notifications     Notification[]
  sentNotifications Notification[]   @relation("NotificationSender")
}

// ============================================
// GAMIFICATION
// ============================================

model Achievement {
  id          String   @id @default(cuid())
  code        String   @unique  // first_goal, week_streak_4, etc.
  title       String
  description String
  icon        String   // Emoji
  xpReward    Int      @default(10)
  category    String   // GOALS, STREAKS, FAMILY, SPECIAL

  users UserAchievement[]
}

model UserAchievement {
  id           String   @id @default(cuid())
  unlockedAt   DateTime @default(now())
  
  userId       String
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievementId String
  achievement  Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
}

model Family {
  id        String   @id @default(cuid())
  name      String
  northStar String?  // –ì–ª–∞–≤–Ω–∞—è —Ü–µ–ª—å —Å–µ–º—å–∏
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Gamification
  level           Int @default(1)
  xp              Int @default(0)
  goalsCompleted  Int @default(0)
  weeklyStreak    Int @default(0)   // –ù–µ–¥–µ–ª—å –ø–æ–¥—Ä—è–¥ –≤—Å–µ –æ—Ç–º–µ—á–∞—é—Ç—Å—è

  // Relations
  members    FamilyMember[]
  goals      Goal[]
  conflicts  Conflict[]
  agreements Agreement[]
  checkIns   CheckIn[]
  invites    Invite[]
}

model FamilyMember {
  id       String   @id @default(cuid())
  role     String   @default("ADULT") // ADULT, PARTNER, CHILD
  joinedAt DateTime @default(now())

  // Relations
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  familyId String
  family   Family @relation(fields: [familyId], references: [id], onDelete: Cascade)

  @@unique([userId, familyId])
}

// ============================================
// GOALS
// ============================================

model Goal {
  id          String    @id @default(cuid())
  title       String
  description String?
  type        String    @default("PERSONAL") // FAMILY, PERSONAL
  horizon     String    @default("MID") // SHORT, MID, LONG
  status      String    @default("DRAFT") // DRAFT, BLOCKED, ACTIVE, PAUSED, COMPLETED, DROPPED
  deadline    DateTime?
  metric      String?   // –ö–∞–∫ –ø–æ–Ω—è—Ç—å, —á—Ç–æ –¥–æ—Å—Ç–∏–≥–ª–∏
  progress    Int       @default(0) // 0-100
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // –†–µ—Å—É—Ä—Å—ã, –∫–æ—Ç–æ—Ä—ã–µ –ø–æ—Ç—Ä–µ–±–ª—è–µ—Ç —Ü–µ–ª—å (JSON)
  resources String? // ["MONEY", "TIME", "GEO", "ENERGY", "RISK"]
  
  // –§–æ—Ç–æ–≥—Ä–∞—Ñ–∏–∏ —Ü–µ–ª–∏ (JSON –º–∞—Å—Å–∏–≤ URL)
  images    String?   // ["url1", "url2", ...]
  
  // –û—Ç–º–µ—Ç–∏—Ç—å —á–ª–µ–Ω–∞ —Å–µ–º—å–∏ (–ø—Ä–æ—Å—å–±–∞/–∑–∞–ø—Ä–æ—Å)
  assignedToId String?
  assignedTo   User?   @relation("AssignedGoals", fields: [assignedToId], references: [id], onDelete: SetNull)

  // Relations
  ownerId  String
  owner    User   @relation("OwnedGoals", fields: [ownerId], references: [id], onDelete: Cascade)
  familyId String
  family   Family @relation(fields: [familyId], references: [id], onDelete: Cascade)

  // Conflicts where this goal is involved
  conflictsAsA Conflict[] @relation("GoalA")
  conflictsAsB Conflict[] @relation("GoalB")

  // Subtasks (—ç—Ç–∞–ø—ã –¥–æ—Å—Ç–∏–∂–µ–Ω–∏—è —Ü–µ–ª–∏)
  subtasks        Subtask[]
  checkInProgress CheckInProgress[]
  comments        Comment[]
  reactions       Reaction[] @relation("GoalReactions")
}

// –ü–æ–¥–∑–∞–¥–∞—á–∏ / –≠—Ç–∞–ø—ã —Ü–µ–ª–∏
model Subtask {
  id          String    @id @default(cuid())
  title       String
  description String?
  completed   Boolean   @default(false)
  completedAt DateTime?
  order       Int       @default(0) // –ü–æ—Ä—è–¥–æ–∫ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è
  createdAt   DateTime  @default(now())

  // Relations
  goalId String
  goal   Goal   @relation(fields: [goalId], references: [id], onDelete: Cascade)

  // –û—Ç–º–µ—á–µ–Ω–æ –≤ –∫–∞–∫–æ–º check-in
  completedInCheckInId String?
  completedInCheckIn   CheckIn? @relation(fields: [completedInCheckInId], references: [id], onDelete: SetNull)
}

// ============================================
// COMMENTS (–û–±—Å—É–∂–¥–µ–Ω–∏–µ —Ü–µ–ª–µ–π)
// ============================================

model Comment {
  id        String   @id @default(cuid())
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  goalId   String
  goal     Goal   @relation(fields: [goalId], references: [id], onDelete: Cascade)
  
  // Reactions
  reactions Reaction[] @relation("CommentReactions")
}

// ============================================
// REACTIONS (–†–µ–∞–∫—Ü–∏–∏ –Ω–∞ —Ü–µ–ª–∏, –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–∏, check-ins)
// ============================================

model Reaction {
  id        String   @id @default(cuid())
  emoji     String   // üëç, ‚ù§Ô∏è, üéâ, üî•, üí™, üëÄ
  createdAt DateTime @default(now())

  // –ö—Ç–æ –æ—Å—Ç–∞–≤–∏–ª —Ä–µ–∞–∫—Ü–∏—é
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // –ö —á–µ–º—É —Ä–µ–∞–∫—Ü–∏—è (–ø–æ–ª–∏–º–æ—Ä—Ñ–Ω–∞—è —Å–≤—è–∑—å)
  goalId    String?
  goal      Goal?    @relation("GoalReactions", fields: [goalId], references: [id], onDelete: Cascade)
  
  commentId String?
  comment   Comment? @relation("CommentReactions", fields: [commentId], references: [id], onDelete: Cascade)
  
  checkInId String?
  checkIn   CheckIn? @relation("CheckInReactions", fields: [checkInId], references: [id], onDelete: Cascade)

  // –û–¥–∏–Ω –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å ‚Äî –æ–¥–Ω–∞ —Ä–µ–∞–∫—Ü–∏—è –Ω–∞ –æ–±—ä–µ–∫—Ç
  @@unique([userId, goalId])
  @@unique([userId, commentId])
  @@unique([userId, checkInId])
}

// ============================================
// CONFLICTS & RESOLUTIONS
// ============================================

model Conflict {
  id          String    @id @default(cuid())
  type        String    // DIRECT, RESOURCE, PRIORITY
  status      String    @default("UNRESOLVED") // UNRESOLVED, RESOLVING, RESOLVED
  description String?
  detectedAt  DateTime  @default(now())
  resolvedAt  DateTime?

  // –ö–∞–∫–∏–µ —Ä–µ—Å—É—Ä—Å—ã –ø–µ—Ä–µ—Å–µ–∫–∞—é—Ç—Å—è
  sharedResources String? // ["GEO", "TIME"]

  // Relations
  goalAId String
  goalA   Goal   @relation("GoalA", fields: [goalAId], references: [id], onDelete: Cascade)
  goalBId String
  goalB   Goal   @relation("GoalB", fields: [goalBId], references: [id], onDelete: Cascade)

  familyId String
  family   Family @relation(fields: [familyId], references: [id], onDelete: Cascade)

  resolution Resolution?
  agreement  Agreement?
}

model Resolution {
  id           String    @id @default(cuid())
  strategy     String    // COMPROMISE, SEQUENCE, TRANSFORM, PRIORITY, DROP
  description  String?
  cost         String?   // –ö—Ç–æ —á–µ–º –∂–µ—Ä—Ç–≤—É–µ—Ç
  compensation String?   // –ß—Ç–æ –ø–æ–ª—É—á–∞–µ—Ç –≤–∑–∞–º–µ–Ω
  reviewDate   DateTime? // –ö–æ–≥–¥–∞ –ø–µ—Ä–µ—Å–º–æ—Ç—Ä–µ—Ç—å
  createdAt    DateTime  @default(now())

  // Relations
  conflictId String   @unique
  conflict   Conflict @relation(fields: [conflictId], references: [id], onDelete: Cascade)
}

// ============================================
// AGREEMENTS
// ============================================

model Agreement {
  id         String    @id @default(cuid())
  title      String
  terms      String    // –£—Å–ª–æ–≤–∏—è –¥–æ–≥–æ–≤–æ—Ä–∞
  validUntil DateTime?
  status     String    @default("ACTIVE") // ACTIVE, EXPIRED, REVISED, CANCELLED
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  // Relations
  conflictId String?   @unique
  conflict   Conflict? @relation(fields: [conflictId], references: [id], onDelete: SetNull)
  familyId   String
  family     Family    @relation(fields: [familyId], references: [id], onDelete: Cascade)
}

// ============================================
// CHECK-INS
// ============================================

model CheckIn {
  id        String   @id @default(cuid())
  week      String   // Format: "2024-W01"
  notes     String?
  blockers  String?
  wins      String?
  createdAt DateTime @default(now())

  // Relations
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  familyId String
  family   Family @relation(fields: [familyId], references: [id], onDelete: Cascade)

  // –ü—Ä–æ–≥—Ä–µ—Å—Å –ø–æ —Ü–µ–ª—è–º –≤ —ç—Ç–æ–º check-in
  goalProgress     CheckInProgress[]
  completedSubtasks Subtask[]
  reactions        Reaction[] @relation("CheckInReactions")

  @@unique([userId, familyId, week])
}

// –ü—Ä–æ–≥—Ä–µ—Å—Å –ø–æ —Ü–µ–ª–∏ –≤ —Ä–∞–º–∫–∞—Ö check-in
model CheckInProgress {
  id        String   @id @default(cuid())
  comment   String?  // –ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π –ø–æ —Ü–µ–ª–∏
  createdAt DateTime @default(now())

  // Relations
  checkInId String
  checkIn   CheckIn @relation(fields: [checkInId], references: [id], onDelete: Cascade)
  goalId    String
  goal      Goal    @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@unique([checkInId, goalId])
}

// ============================================
// INVITES
// ============================================

model Invite {
  id        String   @id @default(cuid())
  code      String   @unique
  familyId  String
  family    Family   @relation(fields: [familyId], references: [id], onDelete: Cascade)
  createdBy String
  expiresAt DateTime
  usedAt    DateTime?
  usedBy    String?
  createdAt DateTime @default(now())
}

// ============================================
// NOTIFICATIONS (–£–≤–µ–¥–æ–º–ª–µ–Ω–∏—è)
// ============================================

model Notification {
  id        String   @id @default(cuid())
  type      String   // GOAL_ASSIGNED, COMMENT, FAMILY_INVITE, GOAL_COMPLETED, CHECK_IN, ACHIEVEMENT
  title     String
  message   String
  link      String?  // URL –¥–ª—è –ø–µ—Ä–µ—Ö–æ–¥–∞
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  // –ö–æ–º—É —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // –û—Ç –∫–æ–≥–æ (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ)
  fromUserId String?
  fromUser   User?    @relation("NotificationSender", fields: [fromUserId], references: [id], onDelete: SetNull)
  
  // –°–≤—è–∑–∞–Ω–Ω—ã–µ —Å—É—â–Ω–æ—Å—Ç–∏ (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ)
  goalId    String?
  familyId  String?
}
